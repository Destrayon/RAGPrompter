@page "/"

<div class="min-h-screen bg-gray-950 p-4 sm:p-6 md:p-8">
    <div class="max-w-3xl mx-auto bg-gray-900 text-white rounded-lg shadow-xl overflow-hidden">
        <!-- Header -->
        <div class="bg-gradient-to-r from-indigo-600/10 to-indigo-500/10 p-4 sm:p-6 border-b border-indigo-600/20">
            <h1 class="text-xl sm:text-2xl font-semibold">Claude Prompt Builder</h1>
        </div>

        <div class="p-4 sm:p-6">
            <!-- Project Selection -->
            <div class="mb-6">
                <label class="block mb-2 text-sm font-medium text-gray-300">Project</label>
                <div class="flex gap-2">
                    <div class="relative flex-1">
                        <button @onclick="ToggleDropdown"
                                class="flex items-center justify-between w-full bg-gray-800 px-4 py-2.5 rounded border border-gray-700 hover:border-indigo-500/50 transition-colors">
                            @selectedProject
                            <i class="fas fa-chevron-down text-gray-400"></i>
                        </button>
                        @if (showDropdown)
                        {
                            <div class="absolute top-full mt-1 w-full bg-gray-800 rounded shadow-lg border border-gray-700 z-10">
                                @foreach (var project in projects)
                                {
                                    <div class="flex items-center justify-between px-4 py-2.5 hover:bg-gray-700 cursor-pointer group"
                                         @onclick="() => SelectProject(project)">
                                        <span>@project</span>
                                        @if (project != "Default")
                                        {
                                            <button @onclick="@(() => DeleteProject(project))"
                                                    class="text-gray-400 hover:text-red-400 opacity-0 group-hover:opacity-100">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    </div>
                    <button @onclick="ShowNewProjectInput"
                            class="bg-gray-800 px-4 py-2.5 rounded border border-gray-700 hover:border-indigo-500/50 transition-colors">
                        <i class="fas fa-plus"></i>
                    </button>
                </div>
            </div>

            <!-- File Upload -->
            <div class="mb-6">
                <label class="block mb-2 text-sm font-medium text-gray-300">Upload Documents (Optional)</label>
                <div class="space-y-2">
                    <div class="flex gap-2">
                        <InputFile OnChange="@UploadFiles" multiple class="hidden" id="fileInput" />
                        <label for="fileInput" class="flex-1 flex items-center justify-center gap-2 bg-gray-800 px-4 py-2.5 rounded border border-gray-700 hover:border-indigo-500/50 transition-colors cursor-pointer">
                            <i class="fas fa-file text-indigo-400"></i>
                            Upload Files
                        </label>

                        <InputFile OnChange="@UploadFolders" multiple directory webkitdirectory class="hidden" id="folderInput" />
                        <label for="folderInput" class="flex-1 flex items-center justify-center gap-2 bg-gray-800 px-4 py-2.5 rounded border border-gray-700 hover:border-indigo-500/50 transition-colors cursor-pointer">
                            <i class="fas fa-upload text-indigo-400"></i>
                            Upload Folders
                        </label>

                        <button @onclick="ShowFileManager"
                                class="bg-gray-800 px-4 py-2.5 rounded border border-gray-700 hover:border-indigo-500/50 transition-colors">
                            <i class="fas fa-file"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Question Input -->
            <div class="mb-6">
                <label class="block mb-2 text-sm font-medium text-gray-300">Your question</label>
                <textarea @bind="question"
                          class="w-full h-32 bg-gray-800 p-4 rounded border border-gray-700 focus:border-indigo-500/50 outline-none resize-none"
                          placeholder="Enter your question for Claude here...">
            </textarea>
            </div>

            <!-- Generate Button -->
            <button @onclick="GeneratePrompt"
                    class="w-full bg-indigo-600 hover:bg-indigo-700 py-2.5 rounded mb-6 transition-colors font-medium">
                Generate
            </button>

            <!-- Generated Prompt -->
            <div>
                <label class="block mb-2 text-sm font-medium text-gray-300">Generated Prompt</label>
                <div class="relative">
                    <textarea readonly
                              value="@generatedPrompt"
                              class="w-full h-32 bg-gray-800 p-4 rounded-t border border-gray-700 resize-none"
                              placeholder="Your formatted prompt will appear here...">
                </textarea>
                    @if (!string.IsNullOrEmpty(generatedPrompt))
                    {
                        <div class="flex justify-end bg-gray-800 px-2 py-2 rounded-b border-x border-b border-gray-700">
                            <button @onclick="CopyToClipboard"
                                    class="text-gray-400 hover:text-white p-1 flex items-center gap-2">
                                <span class="text-sm">Copy</span>
                                <i class="fas fa-copy"></i>
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
